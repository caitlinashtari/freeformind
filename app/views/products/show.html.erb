<h1>Product</h1>
<h4><%= @product.name %></h4>
<p><%= @product.description %></p>
<p>$<%= @product.price %></p>

<% if user_signed_in? %>
  <% if current_user.id == @product.user_id %>
    <p><%= link_to "Edit", edit_product_path(@product) %></p>
    <p><%= link_to "Delete", product_path(@product),
                             :data => {:confirm => "Really?",
                                       :method => "delete"} %></p>
   <% end %>
 <% end %>
